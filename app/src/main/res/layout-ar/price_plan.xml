<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_normal"
    app:cardElevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/top_car_lay"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/cars_price_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_med"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/car_img"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_1"
                    />
                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Go-Awfar"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize2"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:fontFamily="@font/jf_flat_bold"
                    />
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize2"
                    android:gravity="right"

                    android:fontFamily="@font/jf_flat_semi"
                    />
                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize2"
                    android:gravity="left"

                    android:fontFamily="@font/jf_flat_semi"
                    />
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/price_trip_shimmer"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@color/colorShimmer"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textsize2"
                        android:gravity="right"
                        android:fontFamily="@font/jf_flat_semi"
                        />
                </com.facebook.shimmer.ShimmerFrameLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:layout_weight="2"
                    android:tint="@android:color/darker_gray"

                    />
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/balance_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/balance_value"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/jf_flat_semi"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_weight="2"
                />
        </LinearLayout>
        <View
            android:id="@+id/above_sep"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/payment_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_med"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/payment_type_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/padding_med"
                    android:src="@mipmap/moneyy"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/payment_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cash"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textsize2"
                        android:gravity="right"
                        android:fontFamily="@font/jf_flat_bold"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/balance_shimmer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background="@color/colorShimmer"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_normal"
                                android:layout_marginEnd="@dimen/margin_normal"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/textsize2"
                                android:gravity="right"
                                android:fontFamily="@font/jf_flat_semi"
                                />
                        </com.facebook.shimmer.ShimmerFrameLayout>

                    <TextView
                        android:id="@+id/rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:textSize="@dimen/textsize3"
                        android:gravity="right"
                        android:fontFamily="@font/jf_flat_bold"
                        />

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize2"
                    android:gravity="right"
                    android:visibility="invisible"

                    android:fontFamily="@font/jf_flat_semi"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:layout_weight="2"
                    android:tint="@android:color/darker_gray"
                    />
            </LinearLayout>
            <View
                android:id="@+id/sep_promo"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/promo_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/promo_code"
                android:fontFamily="@font/jf_flat_semi"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/padding_med"
                android:textSize="@dimen/textsize3"
                android:layout_weight="2"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:id="@+id/layout_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sex"
                    />
                <TextView
                    android:id="@+id/text_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize3"
                    android:text="@string/male"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/drop_grey"
                    />
            </LinearLayout>
