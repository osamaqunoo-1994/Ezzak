<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/margin_normal"
    android:layout_margin="@dimen/margin_normal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/iv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/padding_med"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="@dimen/margin_normal"
            android:layout_margin="@dimen/margin_normal"
            >
            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/card_img"
            android:layout_marginTop="@dimen/margin_large"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asd"
                android:fontFamily="@font/jf_flat_semi"
                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1500"
                android:layout_marginBottom="@dimen/margin_normal"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/jf_flat_semi"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"
                    android:padding="@dimen/padding_med"
                    />
                <TextView
                    android:id="@+id/tv_quant"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:gravity="center"
                    android:minWidth="30dp"
                    />
                <ImageView
                    android:id="@+id/iv_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/ic_baseline_minimize_24"
                    android:paddingRight="@dimen/padding_med"
                    android:paddingLeft="@dimen/padding_med"
                    android:paddingBottom="@dimen/padding_med"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>